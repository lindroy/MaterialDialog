<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_dialog_bg_color"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:paddingBottom="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="提示"
        android:textColor="@color/md_dialog_title_text_color"
        android:textSize="@dimen/md_dialog_title_size"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="这是一个提示对话框"
        android:textColor="@color/md_dialog_message_text_color"
        android:textSize="@dimen/md_dialog_message_size" />

    <LinearLayout
        android:measureWithLargestChild="true"
        android:gravity="end"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <Button
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:minWidth="50dp"
            android:textColor="@color/md_dialog_button_text_color"
            android:text="Cancel"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:minWidth="50dp"
            android:background="@null"
            android:textColor="@color/md_dialog_button_text_color"
            android:text="Ok"
            android:layout_marginEnd="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>


</LinearLayout>
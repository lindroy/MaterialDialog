<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llGrid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/md_dialog_bg_color"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ivGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/md_grid_item_icon_max_size"
        android:maxHeight="@dimen/md_grid_item_icon_max_size"
       />

    <TextView
        android:ellipsize="end"
        android:id="@+id/tvGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="2" />


</LinearLayout>